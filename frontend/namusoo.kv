<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15

        Label:
            text: '나무수디자인 로그인'
            font_name: 'MyFont'
            font_size: 26
            size_hint_y: None
            height: 60

        TextInput:
            id: email
            hint_text: '이메일'
            font_name: 'MyFont'

        TextInput:
            id: password
            hint_text: '비밀번호'
            password: True
            font_name: 'MyFont'

        Button:
            text: '로그인'
            background_color: 1, 0.8, 0.8, 1
            on_release: root.do_login()

        Button:
            text: '회원가입 가기'
            background_color: 0.8, 0.9, 1, 1
            on_release: root.go_signup()

        Label:
            id: status
            text: ''
            color: 1, 0, 0, 1
            font_name: 'MyFont'

<SignupScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15

        Label:
            text: '회원가입'
            font_name: 'MyFont'
            font_size: 26
            size_hint_y: None
            height: 60

        TextInput:
            id: email
            hint_text: '이메일'
            font_name: 'MyFont'

        TextInput:
            id: pw1
            hint_text: '비밀번호'
            password: True
            font_name: 'MyFont'

        TextInput:
            id: pw2
            hint_text: '비밀번호 확인'
            password: True
            font_name: 'MyFont'

        Button:
            text: '가입 완료'
            background_color: 0.8, 1, 0.8, 1
            on_release: root.do_signup()

        Label:
            id: status
            text: ''
            color: 1, 0, 0, 1
            font_name: 'MyFont'